<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

   <persistence-unit name="test_unit" transaction-type="RESOURCE_LOCAL">
   
      
      <class>com.avlasenko.sb.fmmanager.Client</class>
      <class>com.avlasenko.sb.fmmanager.Account</class>
      <class>com.avlasenko.sb.fmmanager.Address</class>
      <class>com.avlasenko.sb.fmmanager.Document</class>
      <class>com.avlasenko.sb.fmmanager.Work</class>
      <class>com.avlasenko.sb.fmmanager.Contact</class>
      
      
      
      <properties>
         <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/fm_manager"/>
         <property name="javax.persistence.jdbc.user" value="root"/>
         <property name="javax.persistence.jdbc.password" value="root"/>
         <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
         <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
         <property name="hibernate.hbm2ddl.auto" value="create"/>
      </properties>
      
   </persistence-unit>
</persistence>